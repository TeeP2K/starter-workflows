# This is a basic workflow to help you get started with Actions

name: CI

# Controls when the workflow will run
on:
  workflow_dispatch:
     inputs:
      link:
        description: 'ROMLINK'
        required: ture
# A workflow run is made up of one or more jobs that can sequentially or in parallel
jobs:
 # This workflow contains a single job called "build"
 build:
   #The type of runner that the job will run on
   run-on: ubuntu-lastest

  # Steps represent a sequence of tasks that will be executed as part of the job
  steps:
    # Checks-out your repostiory under $GITHUB_WORKSPACE, so your job can access it
    - use: actions/checkout@v3

    # Run a single command using the runner shell
    - name: Run a one-line script
      run:  |
       wget "${{ github.event.input.link }}" -O Xiaomi_HyperOS.zip
       unzip -d Xiaomi_HyperOS Xiaomi_HyperOS.zip
       sudo apt update
       sudo apt install zstd
       cd Xiaomi_HyperOS
       zstd  --rm -d super.zst -o super.img
       mv super.img ${{ github.workspace }}/TIK4/Xiaomi_HyperOS
    - name: Run a multi-linr script
      run: |
        ./run
          1
            2
               11
                  00
                    4
                      1
                        0

